<%- include("header", { title: "Tárgyak kezelése"}) -%>
            <h1 class="text-center">Tárgyak kezelése</h1>
            <table class="table table-striped table-bordered">
                <tr>
                    <th class="col-6">
                        Tárgyak
                    </th>
                    <th class="col-2 text-center">
                        Szerkesztés
                    </th>
                    <th class="col-2 text-center">
                        Törlés
                    </th>
                </tr>
                <% targyak.forEach(targy => { %>
                    <tr>
                        <td class="align-middle">
                            <%= targy.nev %>
                        </td>
                        <td class="text-center">
                            <a class="btn btn-primary" href="/targy/edit/<%= targy.id %>"><i class="fas fa-tools"></i></a>
                        </td>
                        <td class="text-center">
                            <a class="btn btn-primary" href="/targy/delete/<%= targy.id %>"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                <% }); %>
                <tr>
                    <td colspan="3" class="text-center">
                        <a href="/targy/new" class="btn btn-primary btn-lng col-lg-6">Új tárgy hozzáadása</a>
                    </td>
                </tr>
            </table>
<%- include("footer") -%>